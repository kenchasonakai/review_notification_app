<section>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4 text-center">
              <h1 class="my-5"><i class="bi bi-person-circle"></i></h1>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="mb-0">プロフィール</h5>
                  <%= link_to edit_profile_path, class: "text-decoration-none" do %>
                    <i class="bi bi-pencil-square h4"></i>
                  <% end %>
                </div>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="mb-3">
                    <h6 class="h6"><%= User.human_attribute_name(:nickname) %></h6>
                    <p class="text-muted"><%= current_user.nickname || '設定されていません' %></p>
                  </div>
                </div>
                <div class="row pt-1">
                  <div class="mb-3">
                    <h6 class="h6"><%= User.human_attribute_name(:mattermost_id) %></h6>
                    <p class="text-muted"><%= current_user.mattermost_id || '設定されていません' %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
