<%= render 'unsubscribe_modal' %>
<section>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3 py-3">
          <div class="row g-0">
            <div class="col-md-4 text-center my-auto">
              <h1 class=""><i class="bi bi-github"></i></h1>
              <p><%= current_user.github_id %></p>
            </div>
            <div class="col-md-8">
              <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                  <h5 class="mb-0">プロフィール</h5>
                  <%= link_to edit_profile_path, class: "text-decoration-none" do %>
                    <i class="bi bi-pencil-square h4"></i>
                  <% end %>
                </div>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="mb-3">
                    <h6 class="h5"><%= User.human_attribute_name(:nickname) %></h6>
                    <p class="text-muted"><%= current_user.nickname || '設定されていません' %></p>
                  </div>
                </div>
                <div class="row pt-1">
                  <div class="mb-3">
                    <h6 class="h5"><%= User.human_attribute_name(:mattermost_id) %></h6>
                    <p class="text-muted"><%= current_user.mattermost_id || '設定されていません' %></p>
                  </div>
                </div>
                <div class="row pt-1">
                  <div class="mb-3">
                    <h6 class="h5"><%= User.human_attribute_name(:activated) %></h6>
                    <p class="text-muted"><%= current_user.activated? ? 'アクティベート済み' : 'アクティベーション待ち' %></p>
                  </div>
                </div>
                <div class="row pt-1">
                  <div class="mb-3">
                    <div class="d-flex">
                      <h6 class="h5">所属グループ</h6>
                      <%= link_to new_join_groups_path, class: 'ms-3' do %>
                        <i class="bi bi-plus-square h4"></i>
                      <% end %>
                    </div>
                    <ul class="list-unstyled" id="new_join_group_list"></ul>
                    <ul class="list-unstyled">
                      <% current_user.groups.each do |group| %>
                        <li><%= group.name %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
                <div class="pt-1">
                  <%= link_to 'アカウント削除方法はこちら', nil, data: { bs_toggle: "modal", bs_target: "#staticBackdrop" } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
