<section>
  <div class="container py-5 h-100 w-50">
    <div class="card">
      <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h5 class="mb-0">ユーザー情報編集</h5>
        </div>
        <hr class="mt-0 mb-4">
        <%= form_with model: @user do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger mt-2" role="alert">
              <ul class="mb-0 list-inline">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row pt-1">
            <div class="mb-3">
              <%= f.label :nickname, class: "form-label" %>
              <%= f.text_field :nickname, class: "form-control" %>
            </div>
          </div>
          <div class="row pt-1">
            <div class="mb-3">
              <%= f.label :mattermost_id, class: "form-label" %>
              <%= f.text_field :mattermost_id, class: "form-control" %>
            </div>
          </div>
          <div class="row pt-1">
            <div class="mb-3">
              <%= f.label :activated, class: "form-label" %>
              <%= f.select :activated, [['アクティベート済み', true], ['アクティベート待ち', false]], {}, class: "form-control" %>
            </div>
          </div>
          <div class="row pt-1">
            <div class="mb-3">
              <%= f.label :role, class: "form-label" %>
              <%= f.select :role, User.roles.keys.map{ |key| [t("activerecord.enums.user.role.#{key}"), key] }, { selected: @user.role }, class: "form-control" %>
            </div>
          </div>
          <%= f.submit nil, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
